# Example Terraform variables for the sandbox stack
# Copy this file to terraform.tfvars and customize as needed

# Resource naming
prefix      = "myapp"
environment = "sandbox"
suffix      = ""  # Optional: add "001", "east", etc. for multiple deployments

# Azure region (choose cost-effective region close to you)
location = "eastus"

# Cost tracking
cost_center = "engineering"

# Additional custom tags (optional)
custom_tags = {
  project = "terraform-templates"
  owner   = "platform-team"
}

