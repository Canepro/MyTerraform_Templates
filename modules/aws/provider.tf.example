# AWS Provider Configuration Example
# Copy this file to your stack directory and customize

terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = "us-east-1"  # Change to your preferred region
  
  # Authentication options:
  
  # Option 1: Use AWS CLI credentials (recommended for local development)
  # Run: aws configure
  # No additional configuration needed
  
  # Option 2: Use environment variables
  # export AWS_ACCESS_KEY_ID="..."
  # export AWS_SECRET_ACCESS_KEY="..."
  # export AWS_REGION="us-east-1"
  
  # Option 3: Use IAM role (recommended for EC2/ECS/Lambda)
  # No configuration needed, uses instance/task role
  
  # Option 4: Explicit credentials (NOT recommended - don't commit!)
  # access_key = "..."  # Don't do this!
  # secret_key = "..."  # Don't do this!
  
  # Default tags applied to all resources
  default_tags {
    tags = {
      Environment = "sandbox"
      ManagedBy   = "terraform"
      Project     = "myproject"
    }
  }
}

